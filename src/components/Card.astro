---
import { Image } from "@astrojs/image/components";

interface Props {
  name: string;
  img: string;
  actual_kin: string;
  color: string;
}

const { name, img, actual_kin, color } = Astro.props;
---

<div
  class={`text-gray-600 rounded-lg shadow-lg w-full p-10 mt-10 border-2 border-${color}
  flex flex-col text-center lg:text-left lg:flex-row gap-5 items-center`}
>
  <Image
    src={img}
    alt="Ws profile picture"
    width="200"
    aspectRatio="5:5"
    class={`rounded-full filter hue-rotate-30 drop-shadow-lg border-4 border-${color}`}
  />
  <div class="flex flex-col gap-4">
    <h3 class={`text-xl text-${color} font-medium`}>{name}</h3>
    <slot />
    <p>
      Actual kinnie: <span class={`text-${color}`}>{actual_kin}</span>
    </p>
  </div>
</div>
