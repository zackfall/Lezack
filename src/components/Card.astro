---
import { Image } from "@astrojs/image/components";

interface Props {
  name: string;
  img: string;
  actual_kin: string;
  color: string;
}

const { name, img, actual_kin, color } = Astro.props;
---

<div class="shadow-lg w-full rounded-lg p-1 mt-10 bg-gradient-to-r from-green-700 to-orange-800">
  <div
    class="text-gray-600 rounded-lg w-full p-5 flex flex-col text-center lg:text-left lg:flex-row gap-5 items-center bg-gray-50"
  >
    <Image
      src={img}
      alt="Ws profile picture"
      width="200"
      aspectRatio="5:5"
      class="rounded-full filter hue-rotate-30 drop-shadow-lg"
    />
    <div class="flex flex-col gap-4">
      <h3 class={`text-xl text-${color} font-medium`}>{name}</h3>
      <slot />
      <p>
        Actual kinnie: <span class={`text-${color}`}>{actual_kin}</span>
      </p>
    </div>
  </div>
</div>
