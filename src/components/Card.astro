---
import { Image } from "@astrojs/image/components";
// import { Image } from "@astrojs/image/components";

interface Props {
  name: string;
  img: string;
  actual_kin: string;
  border_color: string;
}

const { name, img, actual_kin, border_color } = Astro.props;
---

<!-- <div class="rounded-lg shadow-lg w-full p-10 mt-10 text-center"> -->
<div
  class={`text-gray-800 rounded-lg shadow-lg w-full p-10 mt-10 border-2 border-${border_color} flex gap-5 items-center`}
>
  <Image
    src={img}
    alt="Ws profile picture"
    width="200"
    aspectRatio="5:5"
    class="rounded-full"
  />
  <div class="flex flex-col gap-4">
    <h3>{name}</h3>
    <slot />
    <p>Actual kinnie: {actual_kin}</p>
  </div>
</div>
