---
import Topic from "../components/Topic.astro";
const posts = await Astro.glob("../pages/blog/post/*.mdx");
const recentPosts = posts.slice(-6);
---

<div>
  <ul>
  {recentPosts.map((post) => {
  return (
    <li>
      <Topic color={post.frontmatter.topicColor}>{post.frontmatter.topic}</Topic>
      {/* <p class="flex"><IconCircleFilled className={topicColor} /> <span class={topicColor}>{post.frontmatter.topic}</span></p> */}
      <a href={post.url}>{post.frontmatter.title}</a> 
      <p>{post.frontmatter.description}</p>
    </li>
  );})}
  </ul>
</div>
