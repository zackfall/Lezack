---
import Topic from "../components/Topic.astro";
const posts = await Astro.glob("../pages/blog/post/*.mdx");
const lastPost = posts.filter((post) => post.frontmatter.id == posts.length)[0];
---

<div>
  <Topic color={lastPost.frontmatter.topicColor}>{lastPost.frontmatter.topic}</Topic>
  <a href={lastPost.url}>{lastPost.frontmatter.title}</a>
  <p>{lastPost.frontmatter.description}</p>
</div>
